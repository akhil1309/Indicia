{
    "Services": [
      {
        "Url": "http://example.com/api/v1",
        "Paging": {
          "PageSize": 20,         // Each page contains 20 items
          "OffsetStart": 0,       // The first page is numbered 0
          "OffsetType": "page",   // Offset are based on page numbers, and
                                  // not on total item count
          "Parameters": {
            "Limit": "limit",     // Name of the 'limit' query parameter
            "Offset": "page"      // Name of the 'offset' query parameter
          }
        },
        "Endpoints": [
          {
            "Path": "/users",
            "Method": "GET",
            "ItemType": "User",
            "Uri": "%[coveo_url]/users/%[id]",
            "ClickableUri": "%[coveo_url]/users/%[id]",
            "Title": "%[name]",
            "ModifiedDate": "%[updated]",
            "Metadata": {
              "id": "%[id]",
              "username": "%[name]"
            }
          }
        ]
      }
    ]
  }